<div class="mid-container wrapper">
  <h1 class="title">Sign In</h1>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <ul class="fields">
      <li>
        <i class="icon-user"></i>
        <%= f.text_field :email, placeholder: "email", autocomplete: "off" %>
      </li>
      <li>
        <i class="icon-key"></i>
        <%= f.password_field :password, placeholder: "password", autocomplete: "off" %>
      </li>
    </ul>

    <div class="mid-form">
      <% if devise_mapping.rememberable? -%>
      	<span class="login-checkbox pull-left">
        	<%= f.check_box :remember_me %>
        	<%= f.label :remember_me %>
	      	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
			  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
			<% end -%>
      	</span>
      	
      <% end %>	
      <%= f.submit "Sign In", class: "btn blue large pull-right" %>
    </div>

    <div class="inset-margin">

      <%= link_to "#", class: "btn btn-twitter btn-block" do %>
          <i class="icon-twitter-sign"></i> Login with Twitter
      <% end %>
      <%= link_to "#", class: "btn btn-facebook btn-block" do %>
          <i class="icon-facebook-sign"></i> Login with Facebook
      <% end %>
    </div>

  <% end %>

  <div class="mid-footer">
    Don't have an account yet? <%= link_to "Register here", new_user_registration_path %>
  </div>
</div>
